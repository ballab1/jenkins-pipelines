@Library('jenkins-sharedlibs')_

/////////////////////////////////////////////////////////////////////////////////////////////////

pipeline {
  agent { label 'master' }

  stages {
    stage ('ubuntu-s1') {
      agent { label 'ubuntu-s1' }
      steps {
        ansiColor('xterm') {
	  sh '''
              cd /home/bobb/kafka-deploy
#              git reset --hard HEAD~1
	      git pull --recurse-submodules
	      ./deploy -l
	  '''
        }
      }
    }
    stage ('ubuntu-s3') {
      agent { label 'ubuntu-s3' }
      steps {
        ansiColor('xterm') {
	  sh '''
              cd /home/bobb/kafka-deploy
#              git reset --hard HEAD~1
	      git pull --recurse-submodules
	      ./deploy -l
	  '''
        }
      }
    } 
    stage ('ubuntu-s4') {
      agent { label 'ubuntu-s4' }
      steps {
        ansiColor('xterm') {
	  sh '''
              cd /home/bobb/kafka-deploy
#              git reset --hard HEAD~1
	      git pull --recurse-submodules
	      ./deploy -l
	  '''
        }
      }
    } 
  }
  post {
    always {
        echo 'Publish to Kafka'
        kafkaPublish('kafka_deploy')
    }
  }
} 