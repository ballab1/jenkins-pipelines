
@Library('jenkins-sharedlibs')_

pipeline {
    agent {
        docker {
            image 's2.ubuntu.home:5000/alpine/nagios/4.4.6:dev'
            label 'docker-host'
            registryUrl 'http://s2.ubuntu.home:5000/'
            args '--cap-add=ALL --network=host --volume=/:/host'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '20'))
        disableConcurrentBuilds()
        disableResume()
        timestamps()
    }
    stages {
        stage('nagios monitor') {
            steps {
                sh '/usr/local/nagios/libexec/check_disk -c 90% -w 70% -p /host/dev/sda2'
//                script {
//                    load './status.groovy'
//                }
            }
        }
    }
    post {
        always {
            kafkaBuildReporter()
        }
        cleanup {
            deleteDir()
        }
    }
}
